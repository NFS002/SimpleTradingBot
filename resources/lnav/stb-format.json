{
  "stb_log" : {
    "title" : "Custom STB Log Format",
    "description" : "Custom STB Log Format",
    "json": true,
    "timestamp-field": "@timestamp",
    "hide-extra": false,
    "level-field" : "level",
    "body-field" : "message",
    "module-field": "logger",
    "file-pattern" : ".*\\.json.log$",
    "level" : {
      "error" : "SEVERE",
      "warning" : "WARNING",
      "info" : "INFO",
      "debug" : "DEBUG",
      "trace" : "FINE|FINEST"
    },
    "value" : {
      "@timestamp": {
        "kind": "string"
      },
      "message" : {
        "kind" : "string"
      },
      "logger" : {
        "kind" : "string",
        "identifier": true
      },
      "thread" : {
        "kind" : "integer"
      },
      "level" : {
        "kind" : "string"
      },
      "class" : {
        "kind" : "string"
      },
      "method" : {
        "kind" : "string"
      },
      "exception": {
        "kind": "json"
      }
    },
    "line-format": [
      {
        "field": "thread"
      },
      ".",
      {
        "field": "logger"
      },
      "@",
      {
        "field": "@timestamp"
      },
      " -> ",
      {
        "field": "level"
      },
      " :: ",
      {
        "field": "message"
      }
    ],
    "highlights": {
      "info_level_highlight" : {
        "pattern": "INFO",
        "color": "DarkGreen",
        "underline": true,
        "blink": true
      },
      "error_level_highlight" : {
        "pattern": "SEVERE",
        "color": "Red",
        "background-color": "Grey",
        "blink": true
      },
      "warning_level_highlight" : {
        "pattern": "WARNING",
        "color": "DarkOrange",
        "background-color": "Grey",
        "blink": true
      },
      "thread_id_highlight": {
        "pattern": "\\d{2}(?=.root)",
        "color": "MediumPurple1"
      },
      "class_highlight":{
        "pattern": "class.*",
        "color": "SteelBlue1"
      },
      "method_highlight": {
        "pattern": "method.*",
        "color": "SteelBlue1"
      }
    }
  }
}
